/*
 * helloworld.c: simple test application
 *
 * This application configures UART 16550 to baud rate 9600.
 * PS7 UART (Zynq) is not initialized by this application, since
 * bootrom/bsp configures it to baud rate 115200
 *
 * ------------------------------------------------
 * | UART TYPE   BAUD RATE                        |
 * ------------------------------------------------
 *   uartns550   9600
 *   uartlite    Configurable only in HW design
 *   ps7_uart    115200 (configured by bootrom/bsp)
 */

#include <stdio.h>
#include "platform.h"
#include "xil_printf.h"
#include <xparameters.h>
#include <xil_io.h>

typedef enum {
	BTNC_GPIO_BIT_POS = 0,
	BTND_GPIO_BIT_POS = 1,
	BTNL_GPIO_BIT_POS = 2,
	BTNR_GPIO_BIT_POS = 3,
	BTNU_GPIO_BIT_POS = 4
} BTN_GPIO_BIT_POS;

int main()
{
    init_platform();

    print("Hello World\n\r");
    print("Successfully ran Hello World application\r\n");

    // init gpio for leds as outputs
    *((uint8_t*) (0x41200000 + 0x4)) = 0;

    // init gpio for buttons as inputs; redundant as the initial state should be inputs
    *((uint8_t*) (0x41210000 + 0x4)) = ~0;

    // init gpio for switches as inputs; redundant
    Xil_Out32(XPAR_AXI_GPIO_2_BASEADDR + 0x4, ~0);


    uint8_t user_num = Xil_In32(XPAR_AXI_GPIO_2_BASEADDR) & 0xff;
    Xil_Out32(XPAR_AXI_GPIO_0_BASEADDR, user_num);

    uint8_t last_switches_inp = user_num;
    uint8_t last_buttons_inp = Xil_In32(XPAR_AXI_GPIO_1_BASEADDR) & 0x1f;

    // input pooling loop
    while (1) {
    	uint8_t new_buttons_inp = Xil_In32(XPAR_AXI_GPIO_1_BASEADDR) & 0x1f;
    	uint8_t new_switches_inp = Xil_In32(XPAR_AXI_GPIO_2_BASEADDR) & 0xff;

    	uint8_t buttons_change = new_buttons_inp ^ last_buttons_inp;

    	if (buttons_change != 0 && (new_buttons_inp & buttons_change)) { // button state toggled and it toggled to being pressed (and so it's not being depressed)

    		switch (buttons_change) {
    		case BTNR_GPIO_BIT_POS:
    			user_num >>= 1;
    			break;
    		case BTNL_GPIO_BIT_POS:
    			user_num <<= 1;
    			break;
    		case BTNU_GPIO_BIT_POS:
    			user_num++;
    			break;
    		case BTND_GPIO_BIT_POS:
    			user_num--;
    		default:
    			break;
    		}
    	}


    	Xil_Out32(XPAR_AXI_GPIO_0_BASEADDR, user_num);
    	usleep(10000);
    }



    cleanup_platform();
    return 0;
}
